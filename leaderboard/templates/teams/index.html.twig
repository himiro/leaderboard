{% extends 'base.html.twig' %}

{% block title %}Team ranking{% endblock %}

{% block body %}
    <div class="team__items__list flex flex-col">
        {% for team in teams %}
            <a class="team__items__list__item flex inline-flex bg-grey-light hover:bg-blue text-black hover:text-white p-3 m-3 rounded no-underline" href="/team/{{ team.id }}">
                <div class="team__items__list__item--left-content flex justify-center content-center w-1/6">
                    <h1 class="text-center
                    {% if loop.index == 1 %}
                        text-yellow-dark
                    {% elseif loop.index == 2 %}
                        text-grey-dark
                    {% elseif loop.index == 3 %}
                        text-orange-darker
                    {% endif %}
                    ">
                        <span class="rounded-full self-center"> {{ loop.index }}</span> </h1>
                </div>

                <div class="team__items__list__item--right-content flex flex-col w-5/6">
                    <h1>{{ team.name }}</h1>
                    <div class="team__items__list__item__skills flex inline-flex justify-around font-bold">

                        <span>
                            {{ resultMatches[loop.index - 1][3]}}
                            {% if  resultMatches[loop.index - 1][3] > 1 or  resultMatches[loop.index - 1][3] < -1 %}
                                points
                            {% else %}
                                point
                            {% endif %}
                        </span>

                        <span>
                            <span class="text-green">
                                {{ resultMatches[loop.index - 1][0]  }}
                            </span> :
                            <span class="text-red">
                                {{ resultMatches[loop.index - 1][1] }}
                            </span>:
                            <span class="text-grey">
                                {{ resultMatches[loop.index - 1][2] }}
                            </span>
                        </span>
                        <span class="team__items__list__item__skills--item">µ: {{ team.skill_mu }}</span>
                        <span class="team__items__list__item__skills--item">σ: {{ team.skill_sigma }}</span>
                    </div>
                </div>

            </a>
        {% endfor %}
    </div>
{% endblock %}
